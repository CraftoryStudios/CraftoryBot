
{
	"compilerOptions": {
		"lib": ["ES2020"],
		"module": "commonjs",
		"moduleResolution": "node",
		"target": "ES2020",
		"outDir": "dist",
		"sourceMap": true,
		"esModuleInterop": true,
		"experimentalDecorators": true,
		"emitDecoratorMetadata": true,
		"allowSyntheticDefaultImports": true,
		"skipLibCheck": true,
		"skipDefaultLibCheck": true,
		"resolveJsonModule": true
	}
}
